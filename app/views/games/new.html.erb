<h1>New game</h1>


<ul class="list-group list-group-horizontal-lg">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<br>

<p>What is the longest word you can find ?</p>
<form action="/score" method="POST">
  <input type="text" name="answer" id="answer-input" placeholder="Please enter your answer">
  <input type="submit" name="submit" id="submit-btn" value="Submit my word" class="btn btn-dark">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>

<p>You have played a total of <%= session[:new] %> parties</p>
